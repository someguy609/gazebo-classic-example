<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
	
	<xacro:macro name="inertial_box" params="x y z m *origin">
		<inertial>
			<xacro:insert_block name="origin" />
			<mass value="${m}"/>
			<inertia ixx="${(1/12) * m * (y*y + z*z)}" ixy="0.0" ixz="0.0" 
					 iyy="${(1/12) * m * (x*x + z*z)}" iyz="0.0" 
					 izz="${(1/12) * m * (y*y + z*z)}"/>
		</inertial>
	</xacro:macro>

</robot>